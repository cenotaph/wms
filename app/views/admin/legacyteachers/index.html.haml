.row.expanded
  .small-12.medium-9.columns
    %h1 Users
    
- unless @legacyteachers.empty?
  .row.expanded
    .small-12.columns
      %table
        %thead
          %tr
            %th Who

            %th
        %tbody
          - @legacyteachers.each do |legacyteacher|
            %tr
              %td
                = legacyteacher.name


              %td
                - if can? :edit, legacyteacher
                  = link_to 'Edit', edit_admin_legacyteacher_path(legacyteacher), class: [:button, :small]
                - if can? :destroy, legacyteacher
                  = link_to 'Remove', [:admin, legacyteacher], method: :delete, data: {confirm: 'Are you sure you wish to delete this legacy teacher listing?'}, class: [:button, :alert, :small]